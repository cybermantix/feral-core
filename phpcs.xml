<?xml version="1.0"?>

<ruleset name="PHP_CodeSniffer">

    <description>PHP Code Sniffer configuration file.</description>

    <!-- check all files in the app directory, feel free to add more files with:
    <file>FOLDER NAME</file>
    -->
    <file>src</file>
    <file>tests</file>

    <!-- exclude our migrations directory from the violation check-->
    <exclude-pattern>*/Utility/*</exclude-pattern>

    <!-- ignore warnings and display ERRORS only -->
    <arg value="np"/>

    <!-- Our base rule: set to PSR12-->
    <rule ref="PSR1"/>
    <rule ref="PSR2"/>
    <rule ref="PSR12"/>


</ruleset>